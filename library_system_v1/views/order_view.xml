<odoo>
    <record id="order_view_tree" model="ir.ui.view">
        <field name="name">order.tree</field>
        <field name="model">order</field>
        <field name="arch" type="xml">
            <tree class="text-center">
                <field name="ref"  decoration-danger="state == 'new'"  decoration-success="state == 'completed'"/>
                <field name="customer_id"/>
                <field name="customer_phone"/>
                <field name="customer_code"/>
                <field name="date"/>
                <field name="total" string="Total Price"/>
                <field name="state" widget="badge" decoration-success="state == 'completed'"/>
            </tree>
        </field>
    </record>

    <record id="order_view_form" model="ir.ui.view">
        <field name="name">order.form</field>
        <field name="model">order</field>
        <field name="arch" type="xml" >
            <form>
                <header>
                      <button  name="action_completed" type="object" class="oe_highlight" string="Confirm"
                                attrs="{'invisible': [('state', '!=', 'new')]}"/>
                       <field name="state" widget="statusbar" statusbar_visible="new,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                          <h1>
                              <field name="ref" decoration-danger="state == 'new'"  decoration-success="state == 'completed'"/>
                          </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="customer_phone"/>
                            <field name="customer_code"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="total" string="Total Price"/>
                        </group>
                    </group>
                       <notebook >
                          <page string="Order Lines" >
                                <field name="order_line_ids"  widget="section_and_note_one2many"  attrs="{'readonly':[('state','in',['completed'])]}">
                                    <tree editable="bottom">
                                        <field name="book_id"/>
                                        <field name="quantity"/>
                                        <field name="number_in_hand"/>
                                        <field name="unit_price"/>
                                        <field name="total_price"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="book_id"/>
                                                <field name="number_in_hand"/>
                                                <field name="unit_price"/>
                                                <field name="total_price"/>
                                            </group>
                                        </group>
                                     </form>
                                </field>
                          </page>
                       </notebook>
                </sheet>
                <div class="oe_chatter" >
                   <field name="message_follower_ids"/>
                   <field name="activity_ids"/>
                   <field name="message_ids"/>
               </div>
            </form>
        </field>
    </record>

    <record id="order_action" model="ir.actions.act_window">
        <field name="name">orders</field>
        <field name="res_model">order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
           id = "order_item"
           name = "Order"
           parent = "order_menu"
           action = "order_action"
    />

</odoo>
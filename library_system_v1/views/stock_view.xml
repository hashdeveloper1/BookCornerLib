<odoo>
    <record id="stock_view_tree" model="ir.ui.view">
        <field name="name">stock.tree</field>
        <field name="model">stock</field>
        <field name="arch" type="xml">
            <tree class="text-center">
                <field name="code"/>
                <field name="book_id"/>
                <field name="number"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="stock_view_form" model="ir.ui.view">
        <field name="name">stock.form</field>
        <field name="model">stock</field>
        <field name="arch" type="xml" >
            <form>
                 <header>
                       <button  name="action_completed" type="object" class="oe_highlight" string="Completed"
                                attrs="{'invisible': [('state', '!=', 'new')]}"/>
                       <field name="state" widget="statusbar" statusbar_visible="new,completed"/>
                 </header>
                <sheet>
                    <div class="oe_title">
                          <h1>
                              <field name="code"/>
                          </h1>
                    </div>
                    <group>
                        <group>
                            <field name="book_id"/>
                        </group>
                        <group>
                            <field name="number"/>
                        </group>
                    </group>

                </sheet>
                <div class="oe_chatter" >
                   <field name="message_follower_ids"/>
                   <field name="activity_ids"/>
                   <field name="message_ids"/>
               </div>
            </form>
        </field>
    </record>

    <record id="stock_action" model="ir.actions.act_window">
        <field name="name">Stock</field>
        <field name="res_model">stock</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
           id = "stock_item"
           name = "Stock"
           parent = "stock_menu"
           action = "stock_action"
    />
</odoo>